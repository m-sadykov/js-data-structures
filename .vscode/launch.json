    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Current JS File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test",
            "args": [
                "${file}",
                // "-p"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "internalConsole",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
        }
    ]
}